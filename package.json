{
  "name": "azure-iot-edge-sandbox",
  "version": "0.1.0",
  "description": "Azure IoT Edge sandbox",
  "main": "index.js",
  "scripts": {
    "npm:install:global": "npm install --location=global bower",
    "setup": "npm run npm:install:global",
    "setup:ci": "npm run setup",
    "rm:tmp:CACertificates": "rm -rf ./tmp/CACertificates",
    "precp:iotedge:tools:CACertificates": "npm run rm:tmp:CACertificates",
    "cp:iotedge:tools:CACertificates": "cp -r ./bower_components/iotedge/tools/CACertificates ./tmp/",
    "bower": "bower --allow-root",
    "bower:update": "npm  run bower -- update",
    "prebower:install": "npm run bower:update",
    "bower:install": "npm run bower -- install",
    "postinstall": "npm run bower:install && npm run cp:iotedge:tools:CACertificates",
    "test": "exit 0"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh@github.com:percebus/azure-iot-edge-sandbox.git"
  },
  "keywords": [
    "azure",
    "IoT",
    "sandbox",
    "SDK"
  ],
  "author": "percebus",
  "license": "SEE LICENSE IN LICENSE.md",
  "bugs": {
    "url": "https://github.com/percebus/azure-iot-edge-sandbox/issues"
  },
  "homepage": "https://github.com/percebus/azure-iot-edge-sandbox#readme",
  "devDependencies": {
    "prettier": "^2.8.3"
  }
}
